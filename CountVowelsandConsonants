 package String;

import java.util.Scanner;

public class CountVowelsandConsonants 
{
    public static void main(String[] args)
     {
        int vowelCount = 0;
        int consonantCount = 0;
        String vowels = "aeiouAEIOU"; // Include both lowercase and uppercase vowels
        Scanner s = new Scanner(System.in);

        System.out.println("Enter a String:");
        String str1 = s.nextLine();

        System.out.println("Checking for vowels and consonants:");
        for (int i = 0; i < str1.length(); i++)// Loop through each character
         { 
            char ch = str1.charAt(i);

            if (Character.isLetter(ch)) // Check if the character is a letter
            {
                if (vowels.indexOf(ch) != -1) // Check if the character is in the vowels string
                 {
                    System.out.println("Vowel: " + ch);
                    vowelCount++;
                 } 
                else 
                 {
                    System.out.println("Consonant: " + ch);
                    consonantCount++;
                }
            }
        }

        System.out.println("Total Vowels: " + vowelCount);
        System.out.println("Total Consonants: " + consonantCount);

        s.close();
    }
}
