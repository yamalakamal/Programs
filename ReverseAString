package String;

import java.util.Scanner;

public class ReverseAString 
{
    public static void main(String[] args) 
    {
        int count = 0; // To count characters in the string
        String reverSTR = ""; // To store the reversed string
        Scanner s = new Scanner(System.in);

        System.out.println("Enter String:");
        String name = s.nextLine(); // Read input string
       
        System.out.println("Printing using length() method: " + name.length()); // Using length() method
      
        for (int i = 0; i < name.length(); i++)   // Count the characters in the string using a loop
        { 
            count++;
        }
        System.out.println("Characters counted using loop: " + count);

        
        for (int i = name.length() - 1; i >= 0; i--) // Reverse the string
        {
            reverSTR += name.charAt(i); // Append characters in reverse order
        }

        System.out.println("Reversed String: " + reverSTR); // Print the reversed string

        s.close(); // Close the scanner to free resources
    }
}
