package practice;
import java.util.Scanner;
public class FindingElementMATECHESitsPositionVlue
{
	    public static void main(String[] args) 
	    {
	        Scanner sc = new Scanner(System.in);
	       
	        
	        System.out.println("Enter the size of the array: "); // Prompt user for the size of the array
	        int size = sc.nextInt(); // Size of the array

	        if (size <= 0)
	        {
	            System.out.println("Invalid array size!");
	            sc.close();
	            return;
	        }

	        int[] inputArray = new int[size]; // Create an array to take input from the user
	        System.out.println("Enter the elements of the array: ");
	        for (int i = 0; i < size; i++)
	        {
	            inputArray[i] = sc.nextInt();
	        }
	        
	        System.out.println("Enter input INDEX number to check its value: ");
	        int inputkndex = sc.nextInt();
	        System.out.println("Value at index  " + inputkndex +":"+ inputArray[inputkndex]);
		       
	        		if(inputkndex==inputArray[inputkndex])
	                 {               	 
	                	 System.out.println("True");              	
	                 } 
	        		else
	        		{
	        			System.out.println("Flase");
	        		}
	        		
	        		System.out.println("Here we check all");
	        		for(int i=0;i<=inputArray.length-1;i++)
	        		{
	        			if(i==inputArray[inputkndex])
		                 {     
	        				System.out.println("Value at index  " + i+":"+ inputArray[inputkndex]);
		                	 System.out.println("True");              	
		                 } 
		        		else
		        		{
		        			System.out.println("No element matches");
		        			System.out.println("Flase");
		        		}
	        		}
	      	
	        }

}
