public class RemoveDuplicatesofString
{
 	public static void main(String[] args)
 	{
 		Scanner s=new Scanner(System.in);
 		
        System.out.println("Enter String:");
        String str1 = s.nextLine(); // Read input string
 		
 		
 		StringBuilder sub=new StringBuilder();//it stores the char
 		
 		for(int i=0;i<str1.length();i++)
 		{
 			char ch1=str1.charAt(i);           //if loop run then go to str1 then takes value of index i then stores in "ch1"
 			int idx =str1.indexOf(ch1,i+1);    //indexOf method used to find the 1st occurence of char//Here we passs 2 parameters ch1,i+1
 			                                  // ch1=refers to which carecter you want to search,	
 	                               		   	//i+1=refers to which index position  you want to search,
 		                                	//i+1=refers to which index position  you want to search
 			if(idx==-1)  //if above loop == -1 then ch1 is not repeated         
 			{
 				sub.append(ch1);  //so here append method give back to that char       
 			}
 		
 		}
 		System.out.println(sub);
 			
 	}

}
