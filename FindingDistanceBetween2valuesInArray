package practice;
import java.util.Scanner;
public class FindingDistanceBetween2valuesInArray 
{
	static int count=0;
	
    public static void main(String[]args)
 {
	 Scanner sc=new Scanner(System.in);
	 System.out.println("Enter Size of Array:");
	 int size=sc.nextInt();
	 if(size<=0)
	 {
		 System.out.println("Envalid input");
	 }
	 
	 System.out.println("Enter Elements into Array:"); 
	 int[] inputArray=new int[size];
	 for(int i=0;i<size;i++)
	 {
		 inputArray[i]=sc.nextInt();
	 }
	 
	 System.out.println("Enter the Index Number:");
	 int indexnum1=sc.nextInt();
	 System.out.println("Enter the Index Number:");
	 int indexnum2 =sc.nextInt();
	 
	 for(int i=indexnum1;i<=indexnum2-1;i++)
	 {
	   System.out.println("distance b/w the numbers:"+inputArray[i]);
	   count++;
	 }
	 sc.close();
	 System.out.println("Distance b/w " +indexnum1+" and "+indexnum2+":"+count);
	
 }
}
