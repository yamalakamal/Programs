import java.util.Scanner;
public class FrequencyOfString 
{
    public static void main(String[] args) 
    {
        Scanner s = new Scanner(System.in);

        System.out.println("Enter the main string: ");
        String input1 = s.nextLine();

        System.out.println("Enter the substring frequency you want to find: ");
        String input2 = s.nextLine();

        int count = 0;
        int index = input1.indexOf(input2); // Find the first occurrence

        // Loop to find all occurrences of input2 in input1
        while (index != -1) 
        {
            count++; // Increment the count
            index = input1.indexOf(input2, index + input2.length()); // Move to the next occurrence
        }

        System.out.println("The frequency of '" + input2 + "' is: " + count);
        s.close();
    }
}
